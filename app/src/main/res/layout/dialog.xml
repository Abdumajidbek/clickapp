<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="24dp">

    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot password?"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@android:color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select which contact details should we use to\nreset your password"
        android:textColor="#888888"
        android:textSize="14sp"
        android:layout_marginTop="4dp" />

    <!-- WhatsApp Option -->
    <androidx.cardview.widget.CardView
        android:id="@+id/optionWhatsApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/iconWhatsApp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/img_3" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@id/iconWhatsApp"
                android:layout_marginStart="12dp"
                android:layout_centerVertical="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Send via WhatsApp"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+12 8347 2838 28"
                    android:textColor="#888888"
                    android:textSize="13sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/checkWhatsApp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/img_3"
                android:tint="#FF9800"
                android:visibility="visible" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- Email Option -->
    <androidx.cardview.widget.CardView
        android:id="@+id/optionEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/iconEmail"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/img_3" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@id/iconEmail"
                android:layout_marginStart="12dp"
                android:layout_centerVertical="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Send via Email"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Albertstevano@gmail.com"
                    android:textColor="#888888"
                    android:textSize="13sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/checkEmail"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/img_3"
                android:tint="#FF9800"
                android:visibility="gone" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- Continue Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/continueBtn"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="24dp"
        android:text="Continue"
        android:textColor="@android:color/white"
        android:backgroundTint="#FF9800" />
</LinearLayout>